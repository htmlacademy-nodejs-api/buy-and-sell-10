{
  "name": "buy-and-sell",
  "version": "10.0.0",
  "description": "Проект «{{projectTitle}}» от HTML Academy",
  "type": "module",
  "keywords": [
    "rest",
    "api",
    "node.js"
  ],
  "main": "main.js",
  "scripts": {
    "start:dev": "npm run ts ./src/main.rest.ts | pino-pretty --colorize --translateTime SYS:standard",
    "build": "npm run clean && npm run compile",
    "lint": "eslint src/",
    "compile": "tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "ts": "tsc --noEmit && node --no-warnings=ExperimentalWarning --loader ts-node/esm",
    "mock:server": "json-server ./mocks/mock-server-data.json --port 3123 --host localhost"
  },
  "devDependencies": {
    "@types/convict": "6.1.6",
    "@types/convict-format-with-validator": "6.0.5",
    "@types/node": "22.13.1",
    "eslint": "9.20.0",
    "json-server": "1.0.0-beta.3",
    "pino-pretty": "13.0.0",
    "rimraf": "6.0.1",
    "ts-node": "10.9.2",
    "tslib": "2.8.1",
    "typescript": "5.7.3",
    "typescript-eslint": "8.23.0"
  },
  "engines": {
    "node": ">=22",
    "npm": ">=10"
  },
  "dependencies": {
    "convict": "6.2.4",
    "convict-format-with-validator": "6.2.0",
    "dayjs": "1.11.13",
    "dotenv": "16.4.7",
    "got": "14.4.6",
    "inversify": "6.2.2",
    "pino": "9.6.0",
    "reflect-metadata": "0.2.2"
  }
}
